---
import Layout from "../layouts/Layout.astro";
import ChargeTicketsComponent from "../components/charge-tickets/ChargeTickets.tsx";
import { getSessionUser } from "@/utils/auth.ts";
import { db, User, eq } from "astro:db";

export const prerender = false;

const sessionUser = await getSessionUser(Astro.request);

// 로그인하지 않았다면 홈으로 리다이렉트
if (!sessionUser) {
  return Astro.redirect("/");
}

// 사용자 티켓 정보 조회
const userResults = await db
  .select()
  .from(User)
  .where(eq(User.id, sessionUser.id));
const userTickets = userResults[0]!.tickets;
---

<Layout title="티켓 충전 - 하연이에게 저녁을">
  <ChargeTicketsComponent
    session={sessionUser}
    userTickets={userTickets}
    client:load
  />
</Layout>
