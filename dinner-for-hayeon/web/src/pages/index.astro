---
import { getSession } from 'auth-astro/server';
import '../styles/global.css';

export const prerender = false;

const session = await getSession(Astro.request);
---

<html lang="ko">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>하연이에게 저녁을</title>
	</head>
	<body class="min-h-screen bg-gray-50 flex items-center justify-center">
		<div class="max-w-md w-full bg-white rounded-lg shadow-lg p-8">
			<h1 class="text-3xl font-bold text-center mb-8 text-gray-800">
				하연이에게 저녁을 🍽️
			</h1>

			{session ? (
				<div class="text-center">
					<div class="mb-6">
						{session.user?.image && (
							<img
								src={session.user.image}
								alt="프로필 이미지"
								class="w-16 h-16 rounded-full mx-auto mb-4"
							/>
						)}
						<p class="text-xl text-gray-700 mb-2">
							{session.user?.name}님, 반갑습니다! 👋
						</p>
						<p class="text-sm text-gray-500">
							{session.user?.email}
						</p>
					</div>

					<button
						id="logout"
						class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors"
					>
						로그아웃
					</button>
				</div>
			) : (
				<div class="text-center">
					<p class="text-gray-600 mb-6">
						Google 계정으로 로그인해주세요
					</p>
					<button
						id="login"
						class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors flex items-center justify-center gap-2"
					>
						<svg class="w-5 h-5" viewBox="0 0 24 24">
							<path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
							<path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
							<path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
							<path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
						</svg>
						Google로 로그인
					</button>
				</div>
			)}
		</div>

		<script>
			const { signIn, signOut } = await import("auth-astro/client");

			const loginButton = document.querySelector("#login");
			const logoutButton = document.querySelector("#logout");

			if (loginButton) {
				loginButton.addEventListener("click", () => signIn("google"));
			}

			if (logoutButton) {
				logoutButton.addEventListener("click", () => signOut());
			}
		</script>
	</body>
</html>
